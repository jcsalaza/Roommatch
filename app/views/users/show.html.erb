<h1><%= @user.first_name %> <%= @user.last_name %></h1>
<p>Here's where a picture will be for User number <%= @user.id %></p>
<% if @user.id == current_user.id %>
  <%= link_to "Edit Profile Information", edit_user_path(@user) %>
<% end %>
<ul>
  <li>Age: <%= @user.age %></li>
  <li>Hometown: <%= @user.hometown %></li>
  <li>College/University: <%= @user.school %></li>
  <li>Studying abroad in <%= @user.city %> starting <%= @user.move_in_date.strftime("%m/%d/%Y") %></li>
</ul>
<% if @user.id != current_user.id %>
<button>
  <%= link_to "Send Message", new_message_path(:user => @user.id) %>
</button>
<% end %>
